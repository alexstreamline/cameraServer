        </div>
        <div class="form-group">
            <label asp-for="AccelerometerLimitValue"></label><br />
            <input asp-for="AccelerometerLimitValue" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AccelerometerWorkMode"></label><br />
            <select asp-for="AccelerometerWorkMode" asp-items="Html.GetEnumSelectList<DeviceWorkMode>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="GPSGLONASSLimitValue"></label><br />
            <input asp-for="GPSGLONASSLimitValue" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="GPSGLONASSWorkMode"></label><br />
            <select asp-for="GPSGLONASSWorkMode" asp-items="Html.GetEnumSelectList<DeviceWorkMode>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="ThermometerLimitValue"></label><br />
