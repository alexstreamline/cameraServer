            <label asp-for="WetSensorLimitValue"></label><br />
            <input asp-for="WetSensorLimitValue" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="WetSensorWorkMode"></label><br />
            <select asp-for="WetSensorWorkMode" asp-items="Html.GetEnumSelectList<DeviceWorkMode>()" class="form-control"></select>
        </div>
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </div>
</form>