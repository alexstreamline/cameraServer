@model CameraServer.Models.Devices.DeviceSensorSettings
<h3>
    <span class="label label-primary">@(ViewBag.Label)</span>
    &nbsp
   @*<a href="/DeviceSensorSettings/Create" role="button" class="btn btn-success btn-large">
        <span class="glyphicon glyphicon-plus"></span>
    </a>*@
</h3>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <tr>
                <th></th>
                <th></th>
                <th>ID</th>
                <th>Компас: ограничение, градусы</th>
                @*<th>Компас: режим</th>*@
                <th>Гироскоп: ограничение по любой оси, градусы</th>
                @*<th>Гироскоп: режим</th>*@
                <th>Акселерометр: ограничение по любой оси м/с^2</th>
                @*<th>Акселерометр: режим</th>*@
                <th>GPS/GLONASS: относительное изменение, градусы</th>
                @*<th>GPS/GLONASS: режим</th>*@
                <th>Термометр: относительное изменение, градусы Цельсия</th>
                @*<th>Термометр: режим</th>*@
                <th>Барометр: относительное изменение, мбар</th>
                @*<th>Барометр: режим</th>*@
                <th>Датчик влажности: относительное изменение, %</th>
                @*<th>Датчик влажности: режим</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var settings in ViewBag.Items)
            {
                using (Html.BeginForm())
                {
                    <tr>
                        <td>
                            <a href="/DeviceSensorSettings/Create?id=@settings.Id"
                               role="button" class="btn btn-primary btn-large">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td>
                            @*<a href="/DeviceSensorSettings/Delete?id=@settings.Id"
                               role="button" class="btn btn-danger btn-large">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>*@
                        </td>
                        <td>@settings.Id</td>
                        <td>@settings.CompasLimitValue</td>
                        @*<td>@settings.CompasWorkMode</td>*@
                        <td>@settings.GyroscopeLimitValue</td>
                        @*<td>@settings.GyroscopeWorkMode</td>*@
                        <td>@settings.AccelerometerLimitValue</td>
                        @*<td>@settings.AccelerometerWorkMode</td>*@
                        <td>@settings.GPSGLONASSLimitValue</td>
                        @*<td>@settings.GPSGLONASSWorkMode</td>*@
                        <td>@settings.ThermometerLimitValue</td>
                        @*<td>@settings.ThermometerWorkMode</td>*@
                        <td>@settings.BarometerLimitValue</td>
                        @*<td>@settings.BarometerWorkMode</td>*@
                        <td>@settings.WetSensorLimitValue</td>
                        @*<td>@settings.WetSensorWorkMode</td>*@
                        @*<td><span class="label label-info">@settings.ActionTime.ToString("HH:mm")</span></td>
                        <td>@settings.ActionDayOfWeek</td>
                        <td><input type="checkbox" disabled readonly @(settings.IsCamera1PhotoNeed == true ? "checked" : "") /></td>*@
                    </tr>
                }
            }
        </tbody>
    </table>
    @if(ViewBag.Items.Count > 0)
    {
        <form asp-action="ChangeSettings" asp-controller="DeviceSensorSettings" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="IsContinousModeEnable"></label><br />
            <input asp-for="IsContinousModeEnable" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="StartTimeContinousMode"></label><br />
            <input type="text" asp-for="StartTimeContinousMode" class="form-control" />
            <span asp-validation-for="StartTimeContinousMode"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndTimeContinousMode"></label><br />
            <input type="text" asp-for="EndTimeContinousMode" class="form-control" />
            <span asp-validation-for="EndTimeContinousMode"></span>
        </div>
        <div>
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-default">Применить</button>
            </div>
        </div>
        </form>
    }
</div>