@{
    Layout = null;
}
<h3>
    <span class="label label-primary">@(ViewBag.TriggerDeviceActionsLabel)</span>
    &nbsp
    <a href="/TriggerDeviceAction/Create" role="button" class="btn btn-success btn-large">
        <span class="glyphicon glyphicon-plus"></span>
    </a>
</h3>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <tr>
                <th></th>
                <th></th>
                @*<th>ID</th>*@
                <th>Название</th>
                @*<th>День недели</th>*@
                <th>1 камера</th>
                <th>2 камера</th>
                <th>3 камера</th>
                <th>4 камера</th>
                <th>Синхронизация с сервером</th>
                <th>Сбор данных с датчиков</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deviceAction in ViewBag.TriggerDeviceActions)
            {
                using (Html.BeginForm())
                {
                    <tr>
                        <td>
                            <a href="/TriggerDeviceAction/Create?id=@deviceAction.Id"
                               role="button" class="btn btn-primary btn-large">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                        </td>
                        <td>
                            <a href="/TriggerDeviceAction/Delete?id=@deviceAction.Id"
                               role="button" class="btn btn-danger btn-large">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                        @*<td>@deviceAction.Id</td>*@
                        <td>
                            <span class="label label-info">@deviceAction.SensorName</span>
                        </td>
                        @*<td>@deviceAction.ActionDayOfWeek</td>*@
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsCamera1PhotoNeed == true ? "checked" : "") /></td>
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsCamera2PhotoNeed == true ? "checked" : "") /></td>
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsCamera3PhotoNeed == true ? "checked" : "") /></td>
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsCamera4PhotoNeed == true ? "checked" : "") /></td>
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsPhotoNeedToServer == true ? "checked" : "") /></td>
                        <td><input type="checkbox" disabled readonly @(deviceAction.IsSensorDataNeed == true ? "checked" : "") /></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>