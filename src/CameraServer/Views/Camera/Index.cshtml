<form method="post" action="~/Camera/CreateCameraPhoto" class="form-horizontal" role="form">
    <div class="form-group">
        <label for="cameraNumber" class="col-sm-2 control-label">Номер камеры</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="cameraNumber" id="cameraNumber" placeholder="Введите номер камеры">
        </div>
    </div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Название фотографии</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="name" id="name" placeholder="Введите Название фотографии">
        </div>
    </div>
    <div class="form-group">
        <label for="fsLocation" class="col-sm-2 control-label">Путь в файловой системе:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="fsLocation" id="fsLocation" placeholder="Укажите путь">
        </div>
    </div>
    @*<div class="form-group">
        <label for="timestamp" class="col-sm-2 control-label">Дата и время:</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" name="timestamp" id="timestamp" placeholder="Дата и время">
        </div>
    </div>*@
    <div class="form-group">
        <label for="timestamp" class="col-sm-2 control-label">Дата и время:</label>
        <div class="col-sm-10">
            <input type="datetime" class="form-control" name="TimeStamp" id="timestamp"/>
            <span class="offset-sm-2 col-sm-10">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        <script type="text/javascript">
            $(function() {
                $('#timestamp').datetimepicker();
            });
        </script>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Создать</button>
        </div>
    </div>
</form>

